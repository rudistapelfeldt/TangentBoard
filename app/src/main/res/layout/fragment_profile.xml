<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tangent.assessment.tangentboard.fragment.ProfileFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_banner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scroll_view_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/app_margin_left_right"
            android:layout_marginStart="@dimen/app_margin_left_right"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:paddingBottom="@dimen/app_padding_bottom"
            android:paddingTop="@dimen/app_padding_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/textbackground"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/app_padding_bottom"
                android:paddingTop="@dimen/app_padding_top">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingStart="5dp"
                    android:text="@string/profile_id"
                    android:textColor="#232424"
                    android:textColorHint="#858585"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/profile_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingStart="5dp"
                    android:textColor="#232424"
                    android:textColorHint="#858585"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:paddingBottom="@dimen/app_padding_bottom"
                android:paddingTop="@dimen/app_padding_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbackground"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/app_padding_bottom"
                    android:paddingTop="@dimen/app_padding_top">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:text="@string/profile_fname"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/profile_fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:paddingBottom="@dimen/app_padding_bottom"
                android:paddingTop="@dimen/app_padding_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbackground"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/app_padding_bottom"
                    android:paddingTop="@dimen/app_padding_top">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:text="@string/profile_lname"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/profile_lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:paddingBottom="@dimen/app_padding_bottom"
                android:paddingTop="@dimen/app_padding_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbackground"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/app_padding_bottom"
                    android:paddingTop="@dimen/app_padding_top">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:text="@string/profile_username"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:paddingBottom="@dimen/app_padding_bottom"
                android:paddingTop="@dimen/app_padding_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbackground"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/app_padding_bottom"
                    android:paddingTop="@dimen/app_padding_top">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:text="@string/profile_email"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:paddingBottom="@dimen/app_padding_bottom"
                android:paddingTop="@dimen/app_padding_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbackground"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/app_padding_top"
                    android:paddingTop="@dimen/app_padding_top">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:text="@string/profile_active"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/profile_active"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:paddingBottom="@dimen/app_padding_bottom"
                android:paddingTop="@dimen/app_padding_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbackground"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/app_padding_bottom"
                    android:paddingTop="@dimen/app_padding_top">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:text="@string/profile_staff"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/profile_staff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="vertical"
                android:paddingBottom="@dimen/app_padding_bottom"
                android:paddingTop="@dimen/app_padding_top">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textbackground"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/app_padding_bottom"
                    android:paddingTop="@dimen/app_padding_bottom">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:text="@string/profile_superuser"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/profile_superuser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>
