<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tangent.assessment.tangentboard.fragment.StatisticsFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/app_margin_left_right"
        android:layout_marginStart="@dimen/app_margin_left_right"
        android:layout_marginTop="@dimen/scroll_view_margin_top"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:paddingBottom="@dimen/app_padding_bottom"
        android:paddingTop="@dimen/app_padding_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/app_padding_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="5dp"
                android:text="@string/stats_search"
                android:textColor="#232424"
                android:textColorHint="#858585"
                android:textSize="15sp"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/stats_race"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#232424"
                android:textSize="15sp" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stats_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
