<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tangent.assessment.tangentboard.fragment.StatisticsFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_banner" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scroll_view_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/app_margin_left_right"
            android:layout_marginStart="@dimen/app_margin_left_right"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:paddingBottom="@dimen/app_padding_bottom"
            android:paddingTop="@dimen/app_padding_top">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/textbackground"
                        android:paddingStart="5dp"
                        android:text="@string/stats_no_of_emp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/stats_no_of_emp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="5dp"
                        android:text="@string/stats_no_of_project_managers"
                        android:textColor="#232424"
                        android:background="@drawable/textbackground"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/stats_no_of_pms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/textbackground"
                        android:paddingStart="5dp"
                        android:text="@string/stats_no_of_front_end"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/stats_no_of_fe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/textbackground"
                        android:paddingStart="5dp"
                        android:text="@string/stats_no_of_back_end"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/stats_no_of_be"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/textbackground"
                        android:paddingStart="5dp"
                        android:text="@string/stats_no_of_male_emp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/stats_no_of_male"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/textbackground"
                        android:paddingStart="5dp"
                        android:text="@string/stats_no_of_female_emp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/stats_no_of_female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/textbackground"
                        android:paddingStart="5dp"
                        android:text="@string/stats_no_of_birthdays"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/stats_no_of_birthdays"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="@android:color/transparent"
                        android:paddingStart="5dp"
                        android:textColor="#232424"
                        android:textColorHint="#858585"
                        android:textSize="15sp"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
    </ScrollView>

</LinearLayout>
